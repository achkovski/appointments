# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Neon PostgreSQL)
# Get your connection string from: https://console.neon.tech
# Format: postgresql://[user]:[password]@[neon-hostname]/[database]?sslmode=require
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/appointments?sslmode=require

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-use-long-random-string
JWT_EXPIRE=7d

# Email Configuration (for notifications)
# For Gmail: Use App Password, not regular password
# For Ethereal (testing): Leave blank to use console logging
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@appointments.com
APP_NAME=Appointments App

# Reminder Scheduler Configuration
# Cron schedule for sending daily reminders (default: 10:00 AM every day)
# Format: minute hour day month weekday (e.g., '0 10 * * *' for 10:00 AM daily)
REMINDER_CRON_SCHEDULE=0 10 * * *
# Set to 'true' to run reminder check immediately on server startup (useful for testing)
RUN_REMINDERS_ON_STARTUP=false
# Timezone for scheduler (e.g., 'America/New_York', 'Europe/London', 'UTC')
TZ=America/New_York

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Base URL (for QR codes and links)
BASE_URL=http://localhost:5173

# API Configuration
API_VERSION=v1
